<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_rx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rx+retrofit绝对封装"/>


    <Button
        android:id="@+id/btn_rx_uploade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rx+retrofit上传"/>


    <Button
        android:id="@+id/btn_rx_mu_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="多任务断点续传下载"/>


    <Button
        android:id="@+id/btn_test_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test-0"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/btn_test_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test-1"
        android:textAllCaps="false"/>


    <com.daimajia.numberprogressbar.NumberProgressBar
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/number_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        custom:progress_text_size="20sp"
        />


    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
